<div class="authform">
  <%= simple_form_for(@ujumbe) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :theme %>
    <%= f.input :date %>
    <%= f.input :description %>
    <%= f.input :link %>
    <%= f.input :kind %>
    <%= f.input :private %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
</div>
