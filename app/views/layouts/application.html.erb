<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "ujumbox" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "ujumbox" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
 
        <% if user_signed_in? %>
       <div class="container">
         <%= render 'layouts/messages' %>
       </div>
          <div class="container">
            <%= yield %>
          </div>
        
        <% else %>
           <div class="container">
          <%= render 'layouts/messages' %>
        </div>
          <%= yield %>

          <!-- <footer>
            <%= render 'layouts/footer' %>
          </footer> -->
            
        <% end %>
 
    

<!-- facebook like -->
  <div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/fr_FR/sdk.js#xfbml=1&appId=352345548176853&version=v2.0";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
  </body>
</html>
